<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.pingon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pingon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".BuzonActivity" />
        <activity
            android:name=".NuevoFormularioActivity"
            android:label="@string/title_activity_nuevo_formulario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".InformesActivity" />
        <activity android:name=".BorradoresActivity" />
        <activity android:name=".PendientesEnvioActivity" />
        <activity android:name=".EnviadosActivity" />
        <activity android:name=".InformesDetallesActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".InformesTabsActivity" />
        <activity android:name=".SignDrawActivity" />
        <activity android:name=".PdfPreviewActivity" />
        <activity android:name=".ProfileActivity" />


        <service
            android:name=".SyncService"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name=".BroadcastBootService" android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>