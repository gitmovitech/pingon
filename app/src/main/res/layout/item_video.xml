<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:padding="10dp"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/TextViewLabel"/>

    <Button
        android:id="@+id/ButtonVideoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:text="Grabar video"/>

    <VideoView
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/VideoViewItem"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/LinearLayoutVideo"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ButtonVideoPlay"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_media_play"/>

        <Button
            android:id="@+id/ButtonVideoStop"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_media_pause"/>

        <Button
            android:id="@+id/ButtonVideoRewind"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_media_previous"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/label_obligatorio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp"
        android:text="Este campo es obligatorio."/>

</LinearLayout>