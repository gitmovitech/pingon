<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextViewLabel"/>

        <Button
            android:id="@+id/ButtonVideoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:drawableLeft="@android:drawable/ic_media_play"
            android:text="Grabar video"/>

        <VideoView
            android:visibility="gone"
            android:id="@+id/VideoViewItem"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <LinearLayout
            android:id="@+id/LinearLayoutVideo"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ButtonVideoPlay"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_media_play"/>

            <Button
                android:id="@+id/ButtonVideoStop"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_media_pause"/>

            <Button
                android:id="@+id/ButtonVideoRewind"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_media_previous"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>