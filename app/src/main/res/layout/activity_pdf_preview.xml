<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/preview_pdf"
    tools:context="cl.pingon.PdfPreviewActivity">

    <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pdf_gen_message"
                android:gravity="center"
                android:textSize="16sp" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="7dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="47dp"
            android:src="@drawable/pingon_pdf" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Información del formulario"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#EAEAEA"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_1_1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Nombre del formulario"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_1_1"
                android:text="Orden de trabajo de grúa"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_2_1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_1_1"
                android:layout_marginRight="10dp"
                android:text="Remitente"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_1_2"
                android:layout_toRightOf="@+id/text_2_1"
                android:text="Jorge Ramirez"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_3_1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_2_1"
                android:layout_marginRight="10dp"
                android:text="Número de referencia"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_2_2"
                android:layout_toRightOf="@+id/text_2_1"
                android:text="OT-20170425-1859093932"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_4_1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_3_1"
                android:layout_marginRight="10dp"
                android:text="Ubicación"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/text_4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_3_2"
                android:layout_toRightOf="@+id/text_2_1"
                android:text="Desconocida"
                android:textSize="10sp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
